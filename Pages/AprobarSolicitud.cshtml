@page
@model VistasCamunda.Pages.AprobarSolicitudModel
@{
    ViewData["Title"] = "Aprobar Solicitud";
}
<body>
    <div class="container d-flex justify-content-center mt-5">
        <div class="col-8 card">
            <div class="card-header">
                <h2>Aprobar Solicitud</h2>
            </div>

            <div class="card-body">

                <form method="post">
                    <div class="form-group">
                        <label for="id1">Id:</label>
                        <input type="text" class="form-control" name="id1" id="id1" value="@Model.IdTask" readonly />
                    </div>
                    <div class="form-group">
                        <label for="idInstanced">Id Instancia:</label>
                        <input type="text" class="form-control" name="idInstanced" id="IdInstanced" value="@Model.IdInstanced" readonly />
                    </div>
                    <div class="form-group">
                        <label for="nombres">Nombres:</label>
                        <input type="text" class="form-control" name="Nombres" id="nombres" value="@Model.Nombres" placeholder="Ingresa tus nombres" />
                    </div>
                    <div class="form-group">
                        <label for="apellidos">Apellidos:</label>
                        <input type="text" class="form-control" name="Apellidos" id="apellidos" value="@Model.Apellidos" placeholder="Ingresa tus apellidos" />
                    </div>
                    <div class="form-group">
                        <label for="edad">Edad:</label>
                        <input type="number" class="form-control" name="Edad" id="edad" value="@Model.Edad" placeholder="Ingresa tu edad" />
                    </div>
                    <div class="form-group">
                        <label for="cargo">Cargo:</label>
                        <input type="text" class="form-control" name="Cargo" id="cargo" value="@Model.Cargo" placeholder="Ingresa tu cargo" />
                    </div>
                    <div class="form-group">
                        <label for="ciudad">Ciudad:</label>
                        <input type="text" class="form-control" name="Ciudad" id="ciudad" value="@Model.Ciudad" placeholder="Ingresa tu ciudad" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" name="Email" id="email" value="@Model.Email" placeholder="Ingresa tu email" />
                    </div>
                    <div class="form-group">
                        <label for="telefono">Telefono:</label>
                        <input type="tel" class="form-control" name="Telefono" id="telefono" value="@Model.Telefono" placeholder="Ingresa tu telefono" />
                    </div>
                    <div class="form-group">
                        <label for="observaciones">Observaciones:</label>
                        <input type="text" class="form-control" name="Observaciones" id="observaciones" value="@Model.Observaciones" placeholder="Ingresa tu observacion" />
                    </div>
                    <div class="form-group">
                        <label for="aprobacion">Aprobacion:</label>
                        <div class="form-floating">
                            <select class="form-select" id="floatingSelect" name="Aprobacion" va >
                                <option selected disabled>Seleccione una opcion</option>
                                <option value="true">Aprobado</option>
                                <option value="false">No Aprobado</option>                           
                            </select>
                            <label for="floatingSelect">Decisión de aprobación</label>
                        </div>
                        
                    </div>
                    <div class="text-center card-footer">
                        <button type="submit" asp-page-handler="OnPost" class="btn btn-primary m-2">Registrar</button>
                        <a href="OpenProcess" class="btn btn-primary">Atras</a>
                    </div>
                </form>

            </div>

        </div>
    </div>

</body>